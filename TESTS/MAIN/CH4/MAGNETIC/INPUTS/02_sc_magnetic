magnetic                     # [R] Magnetic fields
HXC_Potential= "default"     # [SC] SC HXC Potential
% SCBands
  1 |  7 |                   # [SC] Bands
%
SCIter= 5                  # [SC] SC Iterations
SCEtresh=   0.0001     eV    # [SC] Energy convergence threshold
SCRhoTresh=0.1000E-7         # [SC] Rho convergence threshold
BandMix= 100.0000            # [SC] Band mixing
Hamiltonian= "landau"        # [MAG] Hamiltonian kind [pauli,landau,all]
B_Field= 1.E4      T     # [MAG] Magnetic field modulus
