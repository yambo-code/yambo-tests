floptics                         # [R] Floquet approach to Non-linear spectroscopy
% NLBands
  5 |  10 |                           # [NL] Bands range
%
% NLEnRange
  2.00000 | 7.00000 |         eV    # [NL] Energy range
%
NLEnSteps=  50                    # [NL] Energy steps
NLDamping= 0.200000        eV    # [NL] Damping (or dephasing)
NLCorrelation= "IPA"             # [NL] Correlation ("IPA/HARTREE/TDDFT/LRC/LRW/JGM/SEX")
% Field1_Dir
 0.000000 | 1.000000 | 0.000000 |        # [RT Field1] Versor
%
Xorder= 2                        # [FL] Max order of the response/exc functions
Xadd_mode=0                      # [FL] Additional modes to ensure convercence
Xthresh_1= 0.100000              # [FL] Self-consistent threshold on 1st order response function
Xthresh_2= 0.100000E-5           # [FL] Self-consistent threshold on 2nd order response function
FL_solver= "D"                   # [FL] Eigenproblem solver mode ("(D)IAGONALIZATION/(L)ANCZOS")
FL_deg_thresh= 0.100000E-4       # [FL] Degeneracy threshold in KS band structure
FL_deg_lift= 0.100000E-1         # [FL] Degeneracy lifting of KS band structure
S_inv_mode= "N"                  # [FL] Inversion method ("(N)UMERICAL/(D)UFFIN/(P)ERTURBATIVE")
FL_max_it= 11                    # [FL] Maximum number of iterations
 
X_nCPU_LinAlg_INV=1 
X_and_IO_nCPU_LinAlg_INV=1 
X_q_0_nCPU_LinAlg_INV=1 
X_finite_q_nCPU_LinAlg_INV=1 
BS_nCPU_LinAlg_INV=1 
BS_nCPU_LinAlg_DIAGO=1 
SE_nCPU_LinAlg_DIAGO=1 
 
K_Threads= 1 
X_Threads= 1 
DIP_Threads= 1 
SE_Threads= 1 
RT_Threads= 1 
NL_Threads= 1 
serial 
