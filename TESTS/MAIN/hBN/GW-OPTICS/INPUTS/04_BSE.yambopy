from yambopy import *

ns_db1='SAVE/ns.db1'
exc_db='04_BSE/ndb.BS_diago_Q1'

ylat = YamboLatticeDB.from_db_file(filename=ns_db1)
yexc = YamboExcitonDB.from_db_file(ylat,filename=exc_db)

yexc.save_chi('o-04_BSE.yambopy.eps2',emax=6)

out = open('o-04_BSE.yambopy.std_out','w')
out.write('#YamboExcitonDB\n')
out.write('#number of transitions:\n')
out.write(str(yexc.ntransitions)+'\n')
out.write('#number of kpoints:\n')
out.write(str(yexc.nkpoints)+'\n')
out.write('#number of valence bands:\n')
out.write(str(yexc.nvbands)+'\n')
out.write('#number of conduction bands:\n')
out.write(str(yexc.ncbands)+'\n')
out.close()
