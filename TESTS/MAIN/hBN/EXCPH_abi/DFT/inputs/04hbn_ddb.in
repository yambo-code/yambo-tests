#h-BN
#Ground state calculation (self consistent part)
 
ecut   4.0  #40      # Minimal kinetic energy cut-off, in Hartree
iomode 3             # This is needed only for the WFs

ndtset 3

#phonon and dde perturbation
rfdir 1 1 1
rfatpol 1 4
getwfk 1
prtwf 0


#######################################################################
# EPH stuff
#######################################################################
getddb_filepath "io_dir/hbn_DDB"
ddb_ngqpt 2 2 2
ddb_shiftq 0 0 0
ph_ngqpt 8 8 8       # just for phonon stuff
eph_ngqpt_fine 8 8 8 # for electron phonon potential interpolation and integration of self energies etc...

# interpolate potential into new DVDB file
eph_task1 5 # need to repeat this for each qpt
getwfk1 2 getdvdb_filepath1 "io_dir/hbn_DVDB"

# produce matrix elements for q1
eph_task2 -2 # need to repeat this for each qpt
getwfk2 2 getwfq2 2 getdvdb2 1
nqpt2 1 qpt2 0.0 0.0 0.0

# produce matrix elements for q2
eph_task3 -2 # need to repeat this for each qpt
getwfk3 2 getwfq10 2 getdvdb3 1
nqpt3 1 qpt10 0.125 0.0 0.0


#######################################################################
#Common input variables
#######################################################################
toldfe 1.0d-10
 
pseudos "B.psp8, N.psp8"

optdriver 7 # need to repeat this for each qpt
ngkpt 8 8 8
kptopt 3

shiftk  0 0 0

acell  4.7163728  4.7163728 12.1758362
rprim    1.0000000000E+00  0.0000000000E+00  0.0000000000E+00
        -5.0000000000E-01  8.6602540378E-01  0.0000000000E+00
         0.0000000000E+00  0.0000000000E+00  1.0000000000E+00
 
#Definition of the atom types
ntypat 2           # There are two types of atoms
znucl 5 7        # The keyword "zatnum" refers to the atomic number of the
                  # possible type(s) of atom. The pseudopotential(s)
                  # mentioned in the "files" file must correspond
                  # to the type(s) of atom.
#Definition of the atoms
natom 4           # There are four  atoms
typat  1 2 1 2
     xcart    2.3581864000E+00  1.3614995528E+00  0.0000000000E+00
             -2.3581864000E+00 -1.3614995528E+00  0.0000000000E+00
             -2.3581864000E+00 -1.3614995528E+00  6.0879181000E+00
              2.3581864000E+00  1.3614995528E+00  6.0879181000E+00

#Definition of the planewave basis set
symmorphi 0
 
#Definition of the SCF procedure
nstep 100          # Maximal number of SCF cycles
diemac 4.50
