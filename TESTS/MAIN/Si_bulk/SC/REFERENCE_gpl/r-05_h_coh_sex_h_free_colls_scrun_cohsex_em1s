 | scrun                            # [R] Self-Consistent Single-Particle Calculations
 | cohsex                           # [R][Xp] COlumb Hole Screened EXchange
 | em1s                             # [R][Xs] Statically Screened Interaction
 | FFTGvecs=  363             RL    # [FFT] Plane-waves
 | X_and_IO_nCPU_LinAlg_INV= 1      # [PARALLEL] CPUs for Linear Algebra (if -1 it is automatically set)
 | SE_nCPU_LinAlg_DIAGO= 1          # [PARALLEL] CPUs for Linear Algebra (if -1 it is automatically set)
 | Chimod= "HARTREE"                # [X] IP/Hartree/ALDA/LRC/PF/BSfxc
 | % BndsRnXs
 |   1 | 13 |                           # [Xs] Polarization function bands
 | %
 | NGsBlkXs=  51              RL    # [Xs] Response block size
 | % LongDrXs
 |  0.100000E-4 |  0.00000    |  0.00000    # [Xs] [cc] Electric Field
 | %
 | HXC_Potential= "HARTREE+COHSEX"  # [SC] SC HXC Potential
 | HARRLvcs=  363             RL    # [HA] Hartree     RL components
 | ALLGHAR                        # [HA] Force the use use all RL vectors for the Hartree potential
 | % SCBands
 |   1 |  8 |                           # [SC] Bands
 | %
 | SCIter= 3                        # [SC] SC Iterations
